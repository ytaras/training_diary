-@val item: model.Shooter
-@val s: skinny.Skinny

-# Be aware of package imports.
-# 1. src/main/scala/templates/ScalatePackage.scala
-# 2. scalateTemplateConfig in project/Build.scala

h3 #{s.i18n.getOrKey("shooter.detail")}
hr
-for (notice <- s.flash.notice)
  p(class="alert alert-info") #{notice}
table(class="table table-bordered")
  thead
    tr
      th #{s.i18n.getOrKey("shooter.id")}
      td #{item.id}
    tr
      th #{s.i18n.getOrKey("shooter.name")}
      td #{item.name}
    tr
      th #{s.i18n.getOrKey("shooter.createdAt")}
      td #{item.createdAt}
    tr
      th #{s.i18n.getOrKey("shooter.updatedAt")}
      td #{item.updatedAt}

hr
div(class="form-actions")
  a(class="btn btn-default" href={s.url(Controllers.shooters.indexUrl)}) #{s.i18n.getOrKey("backToList")}
  a(href={s.url(Controllers.shooters.editUrl, "id" -> item.id)} class="btn btn-info") #{s.i18n.getOrKey("edit")}
  a(data-method="delete" data-confirm={s.i18n.getOrKey("shooter.delete.confirm")} href={s.url(Controllers.shooters.destroyUrl, "id" -> item.id)} rel="nofollow" class="btn btn-danger") #{s.i18n.getOrKey("delete")}
