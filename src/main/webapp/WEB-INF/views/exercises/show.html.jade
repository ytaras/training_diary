-@val item: model.Exercise
-@val s: skinny.Skinny

-# Be aware of package imports.
-# 1. src/main/scala/templates/ScalatePackage.scala
-# 2. scalateTemplateConfig in project/Build.scala

h3 #{s.i18n.getOrKey("exercise.detail")}
hr
-for (notice <- s.flash.notice)
  p(class="alert alert-info") #{notice}
table(class="table table-bordered")
  thead
    tr
      th #{s.i18n.getOrKey("exercise.id")}
      td #{item.id}
    tr
      th #{s.i18n.getOrKey("exercise.name")}
      td #{item.name}
    tr
      th #{s.i18n.getOrKey("exercise.description")}
      td #{item.description}
    tr
      th #{s.i18n.getOrKey("exercise.createdAt")}
      td #{item.createdAt}
    tr
      th #{s.i18n.getOrKey("exercise.updatedAt")}
      td #{item.updatedAt}

hr
div(class="form-actions")
  a(class="btn btn-default" href={s.url(Controllers.exercises.indexUrl)}) #{s.i18n.getOrKey("backToList")}
  a(href={s.url(Controllers.exercises.editUrl, "id" -> item.id)} class="btn btn-info") #{s.i18n.getOrKey("edit")}
  a(data-method="delete" data-confirm={s.i18n.getOrKey("exercise.delete.confirm")} href={s.url(Controllers.exercises.destroyUrl, "id" -> item.id)} rel="nofollow" class="btn btn-danger") #{s.i18n.getOrKey("delete")}
